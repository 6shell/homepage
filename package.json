{
  "name": "howdy-dashboard",
  "version": "1.0.0",
  "description": "Custom your personal dashboard from some components.",
  "author": {
    "name": "leon-kfd",
    "email": "kfd_personal@163.com"
  },
  "keywords": [
    "javascript",
    "vue",
    "vite",
    "typescript",
    "dashboard",
    "drag",
    "custom"
  ],
  "licence": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "eslint ./src",
    "build:crx": "cross-env VITE_APP_BUILD_MODE=crx vite build && node scripts/build-crx.js",
    "start:electron": "electron .",
    "build:electron": "rimraf install && electron-builder"
  },
  "main": "src/electron.js",
  "build": {
    "appId": "kfd_personal@163.com",
    "files": [
      "!dist/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        "zip"
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "directories": {
      "output": "electron"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@howdyjs/animation-dialog": "1.6.8",
    "@howdyjs/mouse-menu": "1.6.7",
    "@howdyjs/to-drag": "1.6.10",
    "dayjs": "^1.10.4",
    "element-plus": "^1.0.2-beta.36",
    "file-saver": "^2.0.5",
    "js-md5": "^0.7.3",
    "vue": "^3.0.5",
    "vue-grid-layout": "3.0.0-beta1",
    "vuedraggable": "^4.0.1",
    "vuex": "^4.0.0",
    "vuex-persistedstate": "^4.0.0-beta.3"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.2",
    "@types/js-md5": "^0.4.2",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@vitejs/plugin-vue": "^1.1.5",
    "@vitejs/plugin-vue-jsx": "^1.1.3",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/eslint-config-typescript": "^5.0.2",
    "adm-zip": "^0.5.5",
    "cross-env": "^7.0.3",
    "electron": "^12.0.9",
    "electron-builder": "^22.10.5",
    "eslint": "^7.23.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^7.0.0-0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.8",
    "typescript": "^4.1.3",
    "vite": "^2.1.3",
    "vue-tsc": "^0.0.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leon-kfd/dashboard"
  }
}
